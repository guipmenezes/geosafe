<div class="<%= @extra_classes %> flex gap-2 flex-col w-full">
  <div class="flex flex-col gap-1">
    <% if @label.present? %>
      <label class="font-medium text-md"><%= @label %></label>
    <% end %>
    <div class="w-full relative">
      <div class="w-full">
        <% if @form.present? %>
          <%= @form.text_field @name, html_options %>
        <% else %>
          <%= text_field_tag @name, @value, html_options %>
        <% end %>
      </div>
      <% if @errors.any? %>
        <div class="text-red-500 text-sm mt-1 pl-4">
          <% @errors.each do |error| %>
            <p><%= error %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
